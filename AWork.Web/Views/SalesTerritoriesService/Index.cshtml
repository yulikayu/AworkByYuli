@model IEnumerable<AWork.Contracts.Dto.Sales.SalesTerritory.SalesTerritoryDto>

@{
    ViewData["Title"] = "Index";
}
<html>
<head>
    @*<h1>List Sales Territory</h1>*@
</head>
<body>
    <div class="container">
        <div class="row mt-4">
            <div class="col-lg-12 d-flex justify-content-between align-items-center">
                <div>
                    <h4 class="text-primary">List Sales Territory</h4>
                </div>
                <div>
                    <a asp-action="Create">
                        <button class="btn btn-primary" type="button" data-toggle="modal" data-target="#addNewUserModal">Create New</button>
                    </a>
                </div>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-lg-12">
                <div id="showAlert"></div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered text-center">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.TerritoryId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Group)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SalesYtd)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SalesLastYear)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CostYtd)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CostLastYear)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CountryRegionCodeNavigation)
                                </th>
                                <th>
                                    Action
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TerritoryId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Group)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SalesYtd)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SalesLastYear)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CostYtd)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CostLastYear)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CountryRegionCodeNavigation.CountryRegionCode)
                                    </td>
                                    <td>
                                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                            <a asp-action="Details" asp-route-id="@item.TerritoryId">
                                                <button class="btn btn-primary me-md-2" type="button">Detail</button>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.TerritoryId">
                                                <button class="btn btn-secondary" type="button">Edit</button>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.TerritoryId">
                                                <button class="btn btn-danger" type="button">Delete</button>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
